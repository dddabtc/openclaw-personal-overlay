+        const { stopped } = stopSubagentsForRequester({
+          cfg,
+          requesterSessionKey: sessionState.sessionKey,
+        });
+        const agentId = resolveSessionAgentId({
+          sessionKey: sessionState.sessionKey,
+          config: cfg,
+        });
